<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top_content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:tag="skin:iv_top_content_bg:background"
        android:background="@drawable/bg"/>

    <TextView
        android:text="无辜的text1"
        android:tag="skin:tv_test_1:textColor"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <TextView
        android:text="无辜的text2"
        android:tag="skin:tv_test_2:textColor"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btn_chg"
        android:text="换他妈的"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>